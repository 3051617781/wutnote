/**index.wxss**/
.search-container{
  background-color: var(--theme-color);
  position: sticky;
  top: 0;
  height: 50px;
  padding: 0 10px;      
  display: flex;
  align-items: center; 
  z-index: 999; 
}
.search-box{
  width: 100%;
  height: 36px;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  border-radius: 15px;
  justify-content: center;
}
.search-box .placeholder{
  font-size: 15px;
  margin-left: 5px;
}


.tags-container{
  display: inline-block;
  white-space: nowrap;
  padding: 0 10rpx;
}
.tags-container::-webkit-scrollbar{
  width: 8rpx; /* 横向滚动条的宽度 */
  height: 50rpx; /* 纵向滚动条的高度 */
}
.tag-item{
  display: inline-block;
  padding: 10rpx 20rpx;
  font-size: 32rpx;
  color: var(--tag-color);
}



.notes-container{
  margin: 20rpx 30rpx;
}
.note-item{
  /* background-color: pink; */
  /* border: 1px solid black; */
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx 0rpx #706d6d4d;
  padding: 5rpx 20rpx;
  margin-bottom: 25rpx;
}
.title{
  font-size: 32rpx;
  font-weight: bold;
  padding: 15rpx 0;
}
.abstract{
  font-size: 26rpx;
  color: #676675;
  line-height: 40rpx;
}
.bottom-box{
  display: flex;
  justify-content: space-between;
  font-size: var(--tag-fontSize);
  color: var(--tag-color);
}
.note-tags-box, .num-box{
  display: flex;
  padding: 10rpx 0;
}
.note-tag-item{
  /* border: 1px solid var(--tag-color); */
  margin-right: 5rpx;
}
.note-tag-item,.num-item{
  /* background-color: yellow; */
  padding: 2rpx 5rpx;
}