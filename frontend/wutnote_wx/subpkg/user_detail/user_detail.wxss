/* subpkg/user_detail/user_detail.wxss */
.user-info-container{
  background: linear-gradient(to bottom, var(--theme-color), var(--theme-color) 0%, white 80%);
  padding-top: 100rpx;
}
.user-info-box{
  height: 120rpx;
  margin: 0 30rpx;
  padding: 0 30rpx;
  border-radius: 15rpx;
  background-color: white;
  box-shadow: 0 18rpx 5rpx 0rpx rgb(228, 225, 225,0.2);
}
.user-info-item{
  display: flex;
  flex-direction: column;
  transform: translateY(-30%);
}
.user-info-item image{
  width: 100rpx; 
  height: 100rpx;
  background-color: var(--border-color);
  border-radius: 50%;
}


.admin-detail-box{
  /* background-color: pink; */
  border-radius: 10rpx;
  /* box-shadow: 0 0 0rpx 5rpx rgb(228, 225, 225,0.3); */
  padding: 26rpx 10rpx;
  margin: 0 40rpx;
}
.admin-nav{
  display: flex;
  justify-content: space-around; 
  padding-bottom: 20rpx;
}
.admin-nav .active{
  border-bottom: 2px solid var(--active-color);
}