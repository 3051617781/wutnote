/* subpkg/search/search.wxss */
.search-container{
  background-color: var(--theme-color);
  position: sticky;
  top: 0;
  height: 50px;
  padding: 0 10px;
  display: flex;
  align-items: center; 
  z-index: 999;
}
.search-box{
  width: 100%;
  height: 36px;
  background-color: #ffffff;
  padding-left: 10px;
  display: flex;
  align-items: center;
  border-radius: 15px;
}
.search-box input{
  width: 100%;
}